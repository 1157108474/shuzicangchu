<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    >

    <include
        android:id="@+id/id_title_bar"
        layout="@layout/include_title_scan_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_bar_height" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:text="@string/apply_num"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_apply_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="@dimen/adapter_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/weichukushuliang"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_noout_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="@dimen/adapter_font_size" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nocontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView

            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="没有相关内容"
            android:textSize="20dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <com.example.admin.storage.views.PullToRefreshListView
        android:id="@+id/receipt_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>
