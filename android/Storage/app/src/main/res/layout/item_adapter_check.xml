<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/danjubianhao"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_bill_number"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="@dimen/adapter_font_size" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/storage"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_creator"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="@dimen/adapter_font_size" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_create_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=""
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="共"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_total_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="5.0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="项  已盘"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/id_already_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="3.0"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="项"
                android:textSize="@dimen/adapter_font_size"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
