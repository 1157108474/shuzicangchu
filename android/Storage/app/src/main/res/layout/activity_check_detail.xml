<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    >

    <include
        android:id="@+id/id_title_bar"
        layout="@layout/include_title_scan_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_bar_height" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorCursor"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical|center_horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weipandian"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/id_no_check_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical|center_horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yipandian"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/id_checked_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corner_bg"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加盘盈数据"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/nocontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView

            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="没有相关内容"
            android:textSize="20dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <com.example.admin.storage.views.PullToRefreshListView
        android:id="@+id/receipt_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>
